<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Url Shortner</title>
    <link href="https://fonts.googleapis.com/css2?family=Hina+Mincho&display=swap" rel="stylesheet">
    <style>
        
        * {
            margin: 0;
            padding: 0;
            font-family: 'Hina Mincho', serif;
            font-size: 15px;
        }
        body{
            margin: 15px 30px;
            font-size: 17px;
            padding: 8px;
        }
        h1{
            text-align: center;
            font-size: 70px
        }
        .container{
            background-color: #f2f2f2;
            border: 1px solid lightgray;
            border-radius: 4px;
            border-bottom: 3px solid #009879;
        }
        .fullUrl,.name{
            width:80%;
            padding : 8px;
            font-size: 52px;
        }
        form{
            display: grid;
            grid-template-columns: auto;
            margin: 55px;
            border: 1px solid black;
            border-radius: 4px;
            border-radius: 5px 5px 0 0;
        }

        .content-tabel{
            border-collapse: collapse;
            margin: 25px 0;
            font-size: 16px;
            min-width: 400px;
            text-align: center;
            /* margin-left: 20px; */
            width: 100%;
        }
        .content-tabel thead tr{
            background-color: #009879;
            color: white;
            text-align: left;
            font-weight: bold;
        }

        .content-tabel th,.content-tabel td{
            padding: 12px 15px;
        }

        .content-tabel tbody tr{
            border-bottom: 1px solid lightgray;
        }
        .content-tabel tbody tr:nth-of-type(even){
            background-color: lightgray;
        }
        
    </style>
</head>

<body>
    <div class="container">
    <h1>URL SHRINKER</h1>
    <form action="/shortUrls" method="POST" class="form">
        <input required type="url" name="fullUrl" id="fullUrl" placeholder="Url">
        <input required type="name" name="name" id="name" placeholder="Custom Name">
        <button type="submit">shrink</button>
    </form>

    <table class="content-tabel">
        <thead >
            <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                <th>Asia clicks</th>
                <th>Africa clicks</th>
                <th>North America clicks</th>
                <th>South America clicks</th>
                <th>Australia clicks</th>
                <th>Europe clicks</th>
                <th>Antarctica clicks</th>
            </tr>
        </thead>

        <tbody>
            <% shortUrls.forEach(shortUrl=>{ %>
                <tr>
                    <td><a href="<%= shortUrl.full %> ">
                            <%= shortUrl.full %>
                        </a></td>
                    <td><a href="<%= shortUrl.short %>">
                            <%= shortUrl.short %>
                        </a></td>
                    <td>
                        <%= shortUrl.Asia%>
                    </td>
                    <td>
                        <%= shortUrl.Africa%>
                    </td>
                    <td>
                        <%= shortUrl.North_America%>
                    </td>
                    <td>
                        <%= shortUrl.South_America%>
                    </td>
                    <td>
                        <%= shortUrl.Australia%>
                    </td>
                    <td>
                        <%= shortUrl.Europe%>
                    </td>
                    <td>
                        <%= shortUrl.Antarctica%>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </div>
    </table>

    <script>
        shorts = document.querySelectorAll("scriptlink")
